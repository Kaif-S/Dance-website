extends base.pug

block scripts
  script(src='../static/index.js')

block style 
    style 
      include ../static/style.css
      include ../static/contact_style.css

block content 
    h1 Contact us
    form(action="/contact",method="post",class="myForm") 
      input(type="name",class="MyInput",name="name",placeholder="Enter your name")
      input(type="phone",class="MyInput",name="phone",placeholder="Enter your phone number")
      input(type="email",class="MyInput",name="email",placeholder="Enter your email")
      input(type="addres",class="MyInput",name="addres",placeholder="Enter your addres")
      input(type="text",class="MyInput",name="desc",placeholder="About yourself")
      button.btn 
        | Submit

